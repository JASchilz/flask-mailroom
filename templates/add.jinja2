{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donor{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Name:</label>
    <input id="name-input" type="text" name="name">
    <label for="donation-input">Donation:</label>
    <input id="donation-input" type="text" name="donation">
    <input type="submit" value="Make a new donation!">
</form>
{% endblock content %}